arma::uvec FOHSIC(arma::field<arma::mat> K, arma::mat L, int mKernels = 1)
{

  arma::vec hsic(K.n_elem);
  arma::vec::iterator h;

  for (h = hsic.begin(), int r = 0; h != hsic.end(); ++h, ++r)
  {
    *h = HSIC(K(r), L);
  }

  arma::uvec selection = sort_index(hsic, "descend").head(mKernels);

  return selection;

}


